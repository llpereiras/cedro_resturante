<p id="notice"><%= notice %></p>

<h1>Pratos</h1>

<%= link_to 'Cadastrar novo Prato', new_prato_path, class: 'btn btn-success btn-sm' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Nome</th>
      <th>Preco</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pratos.each do |prato| %>
      <tr>
        <td class="col-md-1">
          <%= link_to '<span class="glyphicon glyphicon-erase" aria-hidden="true"></span> Apagar'.html_safe, prato, class: 'btn btn-danger btn-xs',  method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td class="col-md-1">
          <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar'.html_safe, edit_prato_path(prato),class: 'btn btn-primary btn-xs' %>
        </td>
        
        <td><%= prato.restaurante.nome %></td>
        <td><%= prato.nome %></td>
        <td><%= prato.preco %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


