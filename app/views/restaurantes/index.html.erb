<p id="notice"><%= notice %></p>
<h1>Restaurantes</h1>
<form class="well">
    <legend>Filtros</legend>
    <div class="form-group">
        <label for="label_pesquisar">Nome</label>
        <input type="text" class="form-control" name="pesquisar" id="id_pesquisar" placeholder="pesquisar">
    </div>
    <div class="row">
        <div class="col-sm-2">
          <button type="submit" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> 
            Pesquisar
          </button>
        </div>
        <div class="col-sm-2">
            <%= link_to new_restaurante_path do %>
                <button class="btn btn-success btn-xs">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 
                    Cadastrar novo Restaurante
                </button>
            <% end %>
        </div>
        <div class="col-sm-8">
            <%= link_to 'Limpar consulta', restaurantes_path, class: 'btn btn-danger btn-xs pull-right' %>
        </div>
    </div>
</form>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="2"></th>
      <th>Nome</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each do |restaurante| %>
      <tr>
        <td class="col-md-1">
          <%= link_to '<span class="glyphicon glyphicon-erase" aria-hidden="true"></span> Apagar'.html_safe, restaurante, class: 'btn btn-danger btn-xs',  method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td class="col-md-1">
          <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar'.html_safe, edit_restaurante_path(restaurante),class: 'btn btn-primary btn-xs' %>
        </td>
        <td><%= restaurante.nome %></td>
      </tr>
    <% end %>
  </tbody>
</table>

